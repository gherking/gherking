{
  "name": "gherking",
  "version": "1.0.0",
  "description": "Simple pre-compiler for Gherkin feature files",
  "main": "index.ts",
  "types": "index.d.ts",
  "bin": {
    "gherkin-precompiler": "bin/precompiler.js",
    "precompile": "bin/precompiler.js"
  },
  "scripts": {
    "build": "npm run buildUpdate && npm test && npm run typedoc",
    "buildUpdate": "npm run clean && npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs ./reports",
    "test": "cross-env JEST_JUNIT_OUTPUT_DIR=./reports jest --coverage",
    "lint": "eslint . --ext .ts --fix",
    "compile": "tsc && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gherking/gherking.git"
  },
  "keywords": [
    "gherkin",
    "cucumber",
    "feature file"
  ],
  "author": "GherKing (https://github.com/gherking)",
  "license": "MIT",
  "contributors": [
    "Laszlo Szikszai <sziklaszlo@gmail.com>",
    "Judit Nahaj <n.juditt@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/gherking/gherking/issues"
  },
  "homepage": "https://github.com/gherking/gherking#readme",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/yargs": "^15.0.13",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "gpc-test": "./tests/cli/compilers/gpc-test",
    "jest": "^26.6.3",
    "jest-expect-message": "^1.0.2",
    "jest-junit": "^12.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.16",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "gherkin-ast": "^3.0.2",
    "gherkin-io": "^1.0.3",
    "glob": "^7.1.6",
    "yargs": "^16.2.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-expect-message",
      "./tests/types.ts"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
